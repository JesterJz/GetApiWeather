<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg"
    tools:context=".Activity.MainActivity">

        <TextView
            android:id="@+id/temp_in_room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Nhiệt độ trong phòng :"
            android:textColor="#fff"
            android:textSize="20sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/title_temp_in_room"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="100dp"
                android:text="Nhiệt độ :"
                android:textColor="#fff"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/temp1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/title_temp_in_room"
                android:text="29"
                android:textColor="#fff"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/temp1"
                android:paddingStart="5dp"
                android:text="&#8451;"
                android:textColor="#fff"
                android:textSize="18sp" />
            <!--//do am-->
            <TextView
                android:id="@+id/title_hum_in_room"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/title_temp_in_room"
                android:layout_marginStart="100dp"
                android:text="Độ ẩm :"
                android:textColor="#fff"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/hum1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/temp1"
                android:layout_marginStart="10dp"
                android:layout_toRightOf="@id/title_temp_in_room"
                android:text="85"
                android:textColor="#fff"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/temp1"
                android:layout_toEndOf="@id/hum1"
                android:paddingStart="5dp"
                android:text="%"
                android:textColor="#fff"
                android:textSize="18sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/weather_forecasts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Nhiệt độ dự báo :"
            android:textColor="#fff"
            android:textSize="20sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/title_weather_forecasts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="100dp"
                android:text="Nhiệt độ :"
                android:textColor="#fff"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/temp2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/title_weather_forecasts"
                android:text="29"
                android:textColor="#fff"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/temp2"
                android:paddingStart="5dp"
                android:text="&#8451;"
                android:textColor="#fff"
                android:textSize="18sp"
                tools:ignore="HardcodedText,RtlSymmetry" />
            <!--//do am-->
            <TextView
                android:id="@+id/title_hum_weather_forecasts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/title_weather_forecasts"
                android:layout_marginStart="100dp"
                android:text="Độ ẩm :"
                android:textColor="#fff"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/hum2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/temp2"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/title_weather_forecasts"
                android:text="85"
                android:textColor="#fff"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/temp2"
                android:layout_toEndOf="@id/hum2"
                android:paddingStart="5dp"
                android:text="%"
                android:textColor="#fff"
                android:textSize="18sp"
                tools:ignore="RtlSymmetry" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/title_On_Off"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="Bật tắt các thiệt bị"
                android:textColor="#fff"
                android:textSize="30dp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switch_hc_sr501"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title_On_Off"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:padding="15dp"
                android:text="HC-SR501  "
                android:textColor="#fff"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/switch_hc_sr501"
                android:layout_centerHorizontal="true"
                android:maxWidth="100dp"
                android:text="Nếu bật chế độ tự động bật tắt thiết bị sẽ hoạt động"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="18sp" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switch_led"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView"
                android:layout_centerHorizontal="true"
                android:padding="15dp"
                android:text="LED"
                android:textColor="#fff"
                android:textSize="18sp" />
        </RelativeLayout>

</LinearLayout>